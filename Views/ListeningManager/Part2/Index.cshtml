@model IEnumerable<TCU.English.Models.TestCategory>
@{
    ViewData["Title"] = "Listening Part 2 Manager";
}

<div class="pt-5">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <h2 class="h6 text-uppercase my-auto">Listening Part 2's Paragraphs</h2>
                <button type="button" onclick="window.location.href='@Url.Action(nameof(TCU.English.Controllers.ListeningManagerController.Part2Create), TCU.English.Utils.NameUtils.ControllerName<TCU.English.Controllers.ListeningManagerController>())'" class="btn btn-primary ml-auto">Add</button>
            </div>
        </div>
        <div class="card-body p-3">
            @if (Model != null && Model.Count() > 0)
            {
                for (int i = 0; i < Model.Count(); i++)
                {
                    <div class="card mb-3 bg-hover-gradient-blue no-anchor-style">
                        <div class="card-body">
                            <div class="align-items-center flex-row">
                                <div onclick="window.location.href='@Url.Action(nameof(TCU.English.Controllers.ListeningManagerController.Part2), TCU.English.Utils.NameUtils.ControllerName<TCU.English.Controllers.ListeningManagerController>(), new { category = Model.ElementAt(i).Id })'" class="float-left">
                                    <p class="mb-0 d-flex align-items-center font-weight-bold"><span>@(i + 1). @Html.Raw(Model.ElementAt(i).Name) <sup class="smaller text-gray font-weight-normal">(@Html.Raw(Model.ElementAt(i).ListeningBaseQuestions.Count))</sup></span></p>
                                    <small class="text-muted">@Html.Raw(Model.ElementAt(i).Description)</small>
                                </div>
                                <span class="float-right">
                                    <button type="button" class="btn btn-warning mx-2" onclick="window.location.href='@Url.Action(nameof(TCU.English.Controllers.ListeningManagerController.Part2Update), TCU.English.Utils.NameUtils.ControllerName<TCU.English.Controllers.ListeningManagerController>(), new { id = Model.ElementAt(i).Id })'">Edit</button>
                                    <button type="button" class="btn btn-danger" onclick="releteCategory(@Model.ElementAt(i).Id, '@Model.ElementAt(i).Name')">Delete</button>
                                    @*                                    <button type="button" class="btn btn-info">View</button>*@
                                </span>
                                @*<div class="col-2" onclick="testCategoryPopupOptions(@Model.ElementAt(i).Id, '@Html.Raw(Model.ElementAt(i).Name)')">
                                        <img src="~/img/3dot.webp" width="18" />
                                    </div>*@
                            </div>
                        </div>
                    </div>
                }
                <div class="pt-3">
                    @await Component.InvokeAsync(nameof(TCU.English.Components.Pagination), (TCU.English.Models.Pagination)ViewBag.CategoryPagination)
                </div>
            }
            else
            {
                <partial name="__EmptyAnimation" />
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
    function releteCategory(id, categoryName) {
            swal({
                title: "Are you sure?",
                text: `Once deleted, this action cannot be undone.`,
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        fetch(`@Url.Action(nameof(TCU.English.Controllers.ListeningManagerController.Part2DeleteAjax), TCU.English.Utils.NameUtils.ControllerName<TCU.English.Controllers.ListeningManagerController>())/${id}`, {
                            method: 'DELETE'
                        }).then(function (response) {
                            response.json().then(function (data) {
                                if (data.success) {
                                    swal(`OK! Listen test name '${categoryName}' has been deleted.`, {
                                        icon: "success",
                                    });
                                    setTimeout(function () { location.reload(); }, 100);
                                } else {
                                    swal(`${data.responseText}`, {
                                        icon: "error",
                                    });
                                }
                            }).catch(function (error) {
                                console.log(error);
                                swal(`Sorry! Listen test name '${categoryName}' has not been deleted.`, {
                                    icon: "error",
                                });
                            });
                        }).catch(function (error) {
                            console.log(error);
                            swal(`Sorry! Listen test name '${categoryName}' has not been deleted.`, {
                                icon: "error",
                            });
                        })
                    } else {
                        swal(`${categoryName}`, "safe!");
                    }
                });
    }
    </script>
}