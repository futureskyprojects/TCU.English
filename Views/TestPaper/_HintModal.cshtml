<div class="modal fade" id="hint_modal" tabindex="-1" role="dialog" aria-labelledby="transcript_modalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transcript_modalTitle">Hint</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="transcript-content"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function LoadHint(contentJson) {
        if (contentJson == null || contentJson == undefined) {
            @Html.Raw(Notification.Info("This section has no hint"))
            return;
        }
        console.log(contentJson);
        $('#transcript-content').html(contentJson);
    }
</script>